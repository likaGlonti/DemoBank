<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/royal_color</item>
        <item name="colorPrimaryDark">@color/royal_color</item>
        <item name="colorAccent">@color/royal_color</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Auth" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="icon">@drawable/ic_log_in</item>
        <item name="iconGravity">end</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DemoBank.Button4</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.Auth" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_box_color</item>
        <item name="hintTextColor">@color/lightYellow</item>
        <item name="cornerSize">10dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Auth" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.Error" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">30dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Error" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/errorRed</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeColor">@color/lightGray</item>
        <item name="strokeWidth">5dp</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.Circle.ImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cornered.ImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="TextView.DemoBank.SplashScreen.Headline" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.DemoBank.Headline4</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>